                                    <goal>war</goal>
                                </goals>

                                <configuration>
                                    <classifier />
                                    <failOnMissingWebXml>true</failOnMissingWebXml>
                                    <webXml>${webxml.location}</webXml>
                                    <webappDirectory>${project.build.directory}/${project.build.finalName}-default</webappDirectory>
                                    <filters>
                                        <filter>
                                            src/main/resources/properties/prov-template-library.webapp.config.properties
                                        </filter>
                                    </filters>
                                    <webResources>
                                        <resource>
