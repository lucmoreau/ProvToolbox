<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
  <Appenders>
    <Console name="Console" target="SYSTEM_OUT">
      <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
    </Console>
  </Appenders>


  <Loggers>
    <Root level="error">
      <AppenderRef ref="Console"/>
    </Root>

    <Logger name="org.quartz-scheduler" level="info"  additivity="false">
      <AppenderRef ref="Console"/>
    </Logger>

    <Logger name="org.openprovenance.prov.service" level="debug"  additivity="false">
      <AppenderRef ref="Console"/>
    </Logger>
    <Logger name="org.openprovenance.prov.template" level="info"  additivity="false">
      <AppenderRef ref="Console"/>
    </Logger>

    <Logger name="org.pac4j.oidc" level="debug"  additivity="false">
      <AppenderRef ref="Console"/>
    </Logger>

    <Logger name="org.pac4j.jwt" level="debug"  additivity="false">
      <AppenderRef ref="Console"/>
    </Logger>


  </Loggers>
</Configuration>


