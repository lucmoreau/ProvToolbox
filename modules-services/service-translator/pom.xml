            <profile>
                <id>tomcat</id>
                <build>
                    <plugins>
                        <plugin>

                            <groupId>org.apache.tomcat.maven</groupId>
                            <artifactId>tomcat7-maven-plugin</artifactId>
                            <version>2.2</version>
                            <configuration>
                                <server>local.tomcat</server> <!-- see .m2/settings.xml -->
                                <port>7070</port>
                                <path>/</path>
                            </configuration>
                            <executions>
                                <execution>
                                    <id>start-tomcat</id>
                                    <phase>pre-integration-test</phase>
                                    <goals>
                                        <goal>run</goal>
                                    </goals>
                                    <configuration>
                                        <fork>true</fork>
                                    </configuration>
                                </execution>
                                <execution>
                                    <id>stop-tomcat</id>
