<?xml version="1.0" encoding="UTF-8"?>
<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd" xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.example</groupId>
    <artifactId>templates</artifactId>
    <version>0.1.0</version>
  </parent>
  <artifactId>templates_cli</artifactId>
  <name>templates_cli</name>
  <description>PROV template demo (templates_cli)</description>
  <dependencies>
    <dependency>
      <groupId>org.openprovenance.prov</groupId>
      <artifactId>prov-model</artifactId>
      <version>0.9.11-SNAPSHOT</version>
    </dependency>
    <dependency>
      <groupId>org.openprovenance.prov</groupId>
      <artifactId>prov-jsweet-candy-java</artifactId>
      <version>0.9.11-SNAPSHOT</version>
    </dependency>
    <dependency>
      <groupId>com.fasterxml.jackson.core</groupId>
      <artifactId>jackson-databind</artifactId>
      <version>2.9.9</version>
      <scope>test</scope>
    </dependency>
  </dependencies>
  <build>
    <plugins>
      <plugin>
        <groupId>org.jsweet</groupId>
        <artifactId>jsweet-maven-plugin</artifactId>
        <version>3.0.0</version>
        <executions>
          <execution>
            <id>generate-js</id>
            <phase>generate-sources</phase>
            <goals>
              <goal>jsweet</goal>
            </goals>
          </execution>
          <execution>
            <id>clean</id>
            <phase>clean</phase>
            <goals>
              <goal>clean</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <verbose>true</verbose>
          <outDir>target/js</outDir>
          <tsOut>target/ts</tsOut>
          <candiesJsOut>webapp/candies</candiesJsOut>
          <targetVersion>ES6</targetVersion>
          <module>none</module>
          <moduleResolution>classic</moduleResolution>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>build-helper-maven-plugin</artifactId>
        <version>3.0.0</version>
        <executions>
          <execution>
            <id>prepare-webjar</id>
            <phase>generate-sources</phase>
            <goals>
              <goal>add-resource</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <resources>
            <resource>
              <directory>${project.build.directory}</directory>
              <targetPath>META-INF/resources/webjars/${project.artifactId}/${project.version}/json</targetPath>
              <includes>
                <include>*.json</include>
              </includes>
            </resource>
            <resource>
              <directory>${project.build.directory}/js</directory>
              <targetPath>META-INF/resources/webjars/${project.artifactId}/${project.version}/js</targetPath>
              <excludes>
                <exclude>**/junk/**</exclude>
              </excludes>
            </resource>
            <resource>
              <directory>src/main/js</directory>
              <targetPath>META-INF/resources/webjars/${project.artifactId}/${project.version}/js</targetPath>
              <excludes>
                <exclude>**/junk/**</exclude>
              </excludes>
            </resource>
            <resource>
              <directory>src/main/resources</directory>
              <targetPath>META-INF/resources/webjars/${project.artifactId}/${project.version}/schema</targetPath>
              <includes>
                <includes>schema.json</includes>
              </includes>
            </resource>
            <resource>
              <directory>src/main/css</directory>
              <targetPath>META-INF/resources/webjars/${project.artifactId}/${project.version}/css</targetPath>
              <includes>
                <includes>*.css</includes>
              </includes>
            </resource>
            <resource>
              <directory>${project.build.directory}/ts</directory>
              <targetPath>META-INF/resources/webjars/${project.artifactId}/${project.version}/ts</targetPath>
              <excludes>
                <exclude>**/junk/**</exclude>
              </excludes>
            </resource>
            <resource>
              <directory>/bindings</directory>
              <targetPath>META-INF/resources/webjars/${project.artifactId}/${project.version}/bindings</targetPath>
              <excludes>
                <exclude>**/junk/**</exclude>
              </excludes>
            </resource>
            <resource>
              <directory>${project.build.directory}/templates</directory>
              <targetPath>META-INF/resources/webjars/${project.artifactId}/${project.version}/templates</targetPath>
              <excludes>
                <exclude>**/junk/**</exclude>
              </excludes>
            </resource>
            <resource>
              <directory>${project.build.directory}/resources</directory>
              <targetPath>META-INF/resources/webjars/${project.artifactId}/${project.version}/schema</targetPath>
              <excludes>
                <exclude>**/junk/**</exclude>
              </excludes>
            </resource>
          </resources>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>
