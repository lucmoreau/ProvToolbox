{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "description": "Schema for a Template Transformation File",
    "definitions": {
        "ProvFormat": {
            "type": "string",
            "enum": ["provn", "prov-jsonld", "jsonld","svg", "png", "pdf"]
        },
        "InstantiateTask": {
            "type": "object",
            "properties": {
                "type": { "const": "instantiate" },
                "description": { "type": "string" },
                "template": { "type": "string" },
                "bindings": { "type": "string" },
                "output": { "type": "string" },
                "outputFullyQualifiedName": { "type": "string" },
                "formats": {
                    "type": "array",
                    "items": { "$ref": "#/definitions/ProvFormat" }
                },

                "hasProvenance": {
                    "type": "string"
                },
                "addOutputDirToInputPath": {
                    "type": "boolean"
                },
                "copyinput": {
                    "type": "boolean"
                },
                "clean2": {
                    "type": "boolean"
                },
                "template_path": {
                    "type": "array",
                    "items": [
                        {
                            "type": "string"
                        }
                    ],
                    "minItems": 1
                }
            },
            "required": ["type", "template", "bindings", "output", "formats"],
            "additionalProperties": false
        },
        "MergeTask": {
            "type": "object",
            "properties": {
                "type": { "const": "merge" },
                "description": { "type": "string" },
                "inputs": {
                    "type": "array",
                    "items": { "type": "string" },
                    "minItems": 1
                },
                "output": { "type": "string" },
                "outputFullyQualifiedName": { "type": "string" },
                "formats": {
                    "type": "array",
                    "items": { "$ref": "#/definitions/ProvFormat" }
                },

                "hasProvenance": {
                    "type": "string"
                },
                "addOutputDirToInputPath": {
                    "type": "boolean"
                },
                "copyinput": {
                    "type": "boolean"
                },
                "clean2": {
                    "type": "boolean"
                },
                "template_path": {
                    "type": "array",
                    "items": [
                        {
                            "type": "string"
                        }
                    ],
                    "minItems": 1
                }
            },
            "required": ["type", "inputs", "output", "formats"],
            "additionalProperties": false
        }
    },
    "type": "object",
    "properties": {
        "template_path": {
            "type": "array",
            "items": [
                {
                    "type": "string"
                }
            ],
            "minItems": 1
        },
        "bindings_path": {
            "type": "array",
            "items": [
                {
                    "type": "string"
                }
            ],
            "minItems": 1
        },
        "output_dir": {
            "type": "string"
        },
        "variableMaps": {
            "type": "array",
            "items": [
                {
                    "type": "string"
                }
            ]
        },
        "tasks": {
            "type": "array",
            "items": {
                "oneOf": [
                    { "$ref": "#/definitions/InstantiateTask" },
                    { "$ref": "#/definitions/MergeTask" }
                ]
            },
            "minItems": 1
        }
    },

    "required": [
        "template_path",
        "bindings_path",
        "output_dir",
        "variableMaps",
        "tasks"
    ]
}