<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <parent>
    <artifactId>modules-tutorial</artifactId>
    <groupId>org.openprovenance.prov</groupId>
    <version>2.0.8-SNAPSHOT</version>
  </parent>

  <modelVersion>4.0.0</modelVersion>
  <artifactId>ProvToolbox-Tutorial3</artifactId>
  <name> |---- ProvToolbox Tutorial 3</name>
  <description>ProvToolbox Tutorial 3</description>

  <developers>
    <developer>
      <id>lucmoreau</id>
      <name>Luc Moreau</name>
      <email>l.moreau@ecs.soton.ac.uk</email>
      <roles>
        <role>Developer</role>
      </roles>
      <organization>University of Southampton</organization>
      <timezone>0</timezone>
    </developer>
    <developer>
      <id>lavm</id>
      <name>Luc Moreau</name>
      <email>lavm@ecs.soton.ac.uk</email>
      <roles>
        <role>Developer</role>
      </roles>
      <organization>University of Southampton</organization>
      <timezone>0</timezone>
    </developer>
  </developers>

  <licenses>
    <license>
      <name>MIT License</name>
      <url>license.txt</url>
    </license>
  </licenses>

  <dependencies>
    <dependency>
      <groupId>org.openprovenance.prov</groupId>
      <artifactId>prov-model</artifactId>
      <version>2.0.8-SNAPSHOT</version>
    </dependency>
    <dependency>
      <groupId>org.openprovenance.prov</groupId>
      <artifactId>prov-interop</artifactId>
      <version>2.0.8-SNAPSHOT</version>
    </dependency>
  </dependencies>

  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
  </properties>

  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-assembly-plugin</artifactId>
        <version>2.2-beta-3</version>
        <!-- there exists a more recent version, but it sets wrong
             permission on directory
             https://jira.codehaus.org/browse/MASSEMBLY-449 -->
        <configuration>
          <descriptors>
            <descriptor>target/classes/assembly.xml</descriptor>
          </descriptors>
        </configuration>
        <executions>
          <execution>
            <phase>package</phase>
            <id>make-assembly</id>
            <goals>
              <goal>single</goal>
            </goals>
          </execution>
        </executions>
      </plugin>


      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-javadoc-plugin</artifactId>
        <version>3.1.1</version>
        <configuration>
          <source>1.9</source>
        </configuration>
      </plugin>

      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>exec-maven-plugin</artifactId>
        <version>1.6.0</version>
        <executions>

          <execution>
            <id>post-try-unzip</id>
            <phase>post-integration-test</phase>
            <goals>
              <goal>exec</goal>
            </goals>
            <configuration>
              <executable>unzip</executable>
              <workingDirectory>${project.build.directory}/tmp</workingDirectory>
              <arguments>
                <argument>${project.build.directory}/${project.build.finalName}-src.zip</argument>
              </arguments>
            </configuration>
          </execution>


          <execution>
            <id>post-try-build</id>
            <phase>post-integration-test</phase>
            <goals>
              <goal>exec</goal>
            </goals>
            <configuration>
              <executable>make</executable>
              <workingDirectory>${project.build.directory}/tmp/${project.build.finalName}</workingDirectory>
              <arguments>
                <argument>PROVCONVERT=${project.basedir}/../../modules-executable/toolbox/target/appassembler/bin/provconvert</argument>
              </arguments>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>


    <resources>
      <resource>
        <directory>src/main/resources</directory>
        <filtering>true</filtering>
      </resource>
    </resources>

  </build>
</project>
