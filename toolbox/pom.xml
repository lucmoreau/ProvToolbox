		      <type>file</type>
		      <mapper>
			<type>perm</type>
			<prefix>/usr/local/lib/provconvert</prefix>
			<user>root</user>
			<group>root</group>
		      </mapper>
		    </data>
		    <data>
		      <src>${project.build.directory}/provconvert.txt</src>
		      <type>file</type>
		      <mapper>
			<type>perm</type>
			<prefix>/usr/local/lib/provconvert</prefix>
			<user>root</user>
			<group>root</group>
		      </mapper>
		    </data>
		    <data>
		      <src>${project.build.directory}/generated-sources/license/THIRD-PARTY.txt</src>
		      <type>file</type>
		      <mapper>
			<type>perm</type>
			<prefix>/usr/local/lib/provconvert</prefix>
			<user>root</user>
			<group>root</group>
		      </mapper>
		    </data>
		    <data>
		      <src>${project.build.directory}/provconvert.1</src>
		      <type>file</type>
		      <mapper>
			<type>perm</type>
			<prefix>/usr/local/man/man1</prefix>
