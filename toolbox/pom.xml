    </profile>

    <profile>
      <id>unix</id>
      <activation>
        <os>
	  <family>unix</family>
        </os>
      </activation>
      <build>
	<plugins>

	  <plugin>
	    <artifactId>jdeb</artifactId>
	    <groupId>org.vafer</groupId>
	    <version>1.4</version>
	    <executions>
	      <execution>
		<phase>package</phase>
		<goals>
		  <goal>jdeb</goal>
		</goals>
