<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
	 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	 xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.openprovenance.prov.tutorial</groupId>
  <artifactId>ProvToolbox-Tutorial5</artifactId>
  <version>${pom.version}</version>
  <name>ProvToolbox Tutorial 5</name>
  <description>ProvToolbox Tutorial 5</description>

  <developers>
    <developer>
      <id>lucmoreau</id>
      <name>Luc Moreau</name>
      <email>l.moreau@ecs.soton.ac.uk</email>
      <roles>
	<role>Developer</role>
      </roles>
      <organization>University of Southampton</organization>
      <timezone>0</timezone>
    </developer>
    <developer>
      <id>lavm</id>
      <name>Luc Moreau</name>
      <email>lavm@ecs.soton.ac.uk</email>
      <roles>
	<role>Developer</role>
      </roles>
      <organization>University of Southampton</organization>
      <timezone>0</timezone>
    </developer>
  </developers>

  <repositories>
<!--
    <repository>
      <id>mvn.prov.toolbox</id>
      <name>maven repository for PROV toolbox</name>
      <url>http://openprovenance.org/java/maven-releases/</url>
    </repository>
-->

    <repository>
      <id>mvn.prov.toolbox.snapshots</id>
      <name>maven snapshot repository for PROV toolbox</name>
      <url>http://openprovenance.org/java/maven-snapshots/</url>
    </repository>
  </repositories>

  <licenses>
    <license>
      <name>MIT License</name>
      <url>license.txt</url>
    </license>
  </licenses>

  <dependencies>
    <dependency>
      <groupId>org.openprovenance.prov</groupId>
      <artifactId>prov-model</artifactId>
      <version>${pom.version}</version>
    </dependency>
    <dependency>
      <groupId>org.openprovenance.prov</groupId>
      <artifactId>prov-interop</artifactId>
      <version>${pom.version}</version>
    </dependency>
  </dependencies>

  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
  </properties>

  <build>
    <plugins>
      <plugin>
	<groupId>org.codehaus.mojo</groupId>
	<artifactId>exec-maven-plugin</artifactId>
	<version>1.3.2</version>
	<executions>
	  <execution>
	    <id>test1</id>
	    <phase>test</phase>
	    <goals>
	      <goal>java</goal>
	    </goals>
	    <configuration>
	      <mainClass>org.openprovenance.prov.tutorial.tutorial5.ProvenanceChallenge1</mainClass>
	      <arguments>
		<argument>${project.build.directory}/pc1.svg</argument>
		<argument>${project.build.directory}/pc1.provn</argument>
	      </arguments>
	    </configuration>
	  </execution>
	  <execution>
	    <id>test2</id>
	    <phase>test</phase>
	    <goals>
	      <goal>java</goal>
	    </goals>
	    <configuration>
	      <mainClass>org.openprovenance.prov.tutorial.tutorial5.ProvenanceChallenge2</mainClass>
	      <arguments>
		<argument>${project.build.directory}/pc2.svg</argument>
		<argument>${project.build.directory}/pc2.provn</argument>
	      </arguments>
	    </configuration>
	  </execution>
	  <execution>
	    <id>test3</id>
	    <phase>test</phase>
	    <goals>
	      <goal>java</goal>
	    </goals>
	    <configuration>
	      <mainClass>org.openprovenance.prov.tutorial.tutorial5.ProvenanceChallenge1Template</mainClass>
	      <arguments>
		<argument>${project.build.directory}/pc3.svg</argument>
		<argument>${project.build.directory}/pc3.provn</argument>
		<argument>${project.build.directory}/bind</argument>
	      </arguments>
	    </configuration>
	  </execution>
	</executions>
      </plugin>
    </plugins>


  </build>
</project>
